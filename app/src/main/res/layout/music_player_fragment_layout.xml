<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/setting_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/linearLayout">

                <ImageView
                    android:id="@+id/minimized_equalizer_button"
                    android:layout_width="@dimen/default_icon_size"
                    android:layout_height="@dimen/default_icon_size"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:src="@drawable/equalizer"/>
                <ImageView
                    android:id="@+id/minimized_player_button"
                    android:layout_width="@dimen/default_icon_size"
                    android:layout_height="@dimen/default_icon_size"
                    android:layout_marginRight="@dimen/default_margin"
                    android:src="@drawable/minimize"/>
            <ImageView
                android:id="@+id/close_button"
                android:layout_width="@dimen/default_icon_size"
                android:layout_height="@dimen/default_icon_size"
                android:src="@drawable/close"/>
        </LinearLayout>
        <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="@dimen/half_margin"
                    android:layout_toStartOf="@+id/linearLayout"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/command_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/half_margin">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <SeekBar
                    android:id="@+id/music_progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/progress_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/music_progressbar"/>
                <TextView
                    android:id="@+id/duration_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/music_progressbar"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/half_margin"
            android:layout_marginTop="@dimen/half_margin">
            <ImageView
                android:id="@+id/prev_button"
                android:clickable="true"
                android:background="@drawable/default_button_indicator"
                android:layout_width="@dimen/default_icon_size"
                android:layout_height="@dimen/default_icon_size"
                android:src="@drawable/last"/>
            <ImageView
                android:id="@+id/play_button"
                android:background="@drawable/default_button_indicator"
                android:layout_width="@dimen/mini_cover_width"
                android:layout_height="@dimen/mini_cover_width"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:clickable="true"
                android:tag="true"
                android:src="@drawable/play"/>
            <ImageView
                android:id="@+id/next_button"
                android:clickable="true"
                android:background="@drawable/default_button_indicator"
                android:layout_width="@dimen/default_icon_size"
                android:layout_height="@dimen/default_icon_size"
                android:src="@drawable/next"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginTop="@dimen/half_margin"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/half_margin"
                android:layout_marginBottom="@dimen/half_margin">
                <ImageView
                    android:layout_width="@dimen/header_text_size"
                    android:layout_height="@dimen/header_text_size"
                    android:src="@drawable/no_volume"
                    android:id="@+id/imageView2"
                    android:layout_alignParentStart="true"/>
                <SeekBar
                    android:id="@+id/volume_progressbar"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_toLeftOf="@+id/imageView"
                    android:layout_toRightOf="@+id/imageView2"/>
                <ImageView
                    android:layout_width="@dimen/header_text_size"
                    android:layout_height="@dimen/header_text_size"
                    android:src="@drawable/volume"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/setting_relativelayout"
        android:layout_above="@+id/command_relativelayout">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/art_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="centerCrop"
                android:src="@drawable/logo"/>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title_relativelayout"
                android:background="@drawable/default_shape">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/album_art_imageview"
                        android:layout_width="@dimen/mini_cover_width"
                        android:layout_height="@dimen/mini_cover_width"
                        android:layout_margin="@dimen/half_margin"/>
                    <TextView
                        android:id="@+id/textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/header_text_size"
                        android:textStyle="bold"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/preset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_relativelayout"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:background="@drawable/default_button_indicator"
                android:gravity="center_vertical"
                android:padding="@dimen/half_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/default_margin"
                    android:text="teste"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>